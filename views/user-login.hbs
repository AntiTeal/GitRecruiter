<div>
    <h2 class="page-header">User Login</h2>
    <form method="POST" action="/users/login">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" id="user_login_email" name="email" placeholder="Email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="text" class="form-control" id="user_login_password" name="password" placeholder="Password" />
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
